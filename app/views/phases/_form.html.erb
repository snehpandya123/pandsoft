<%= form_for @phase, :html => { :class => "form-horizontal phase" } do |f| %>

    <% if @phase.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@phase.errors.count, "error") %> prohibited this phase from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @phase.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@phase[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :folder_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.hidden_field :folder_id, :class => 'form-control' %>
    </div>
    <%= error_span(@phase[:folder_id]) %>
  </div>

<% @folders.each do |h| %>
  <% h.phases.each do |p| %>
     
       <% if p.id == @phase.id %>

   <%= f.submit nil, :class => 'btn btn-primary' %>

<% end %>
<% end %>
 
 <% end %>

<% end %>
