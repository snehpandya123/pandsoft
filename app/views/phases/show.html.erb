<%- model_class = Phase -%>
<div class="page-header">
  <h1><%= @phase.name %></h1>
 
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_phase_path(@phase), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              phase_path(@phase),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>



 <div class="container">
   <div class="span8 well">
     <%= form_for @story, :html => { :class => "form-horizontal story" } do |f| %>

    <% if @story.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @story.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :heading, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :heading, :class => 'form-control' %>
    </div>
    <%= error_span(@story[:heading]) %>
  </div>
 <div class="control-group">
    <%= f.label :describtion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :describtion, :class => 'form-control' %>
    </div>
    <%= error_span(@story[:describtion]) %>
  </div>
  <div class="control-group">
   
    <div class="controls">
      <%= f.hidden_field :phase_id, :class => 'form-control' , :value => "#{@phase.id}" %>
    </div>
    
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
 

<% end %>
   </div>
 </div>


 <div class="container">
  <div class="row">



 <% @phase.stories.each do |s|%>
 <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <div class="offer offer-info">
        <div class="shape">
          <div class="shape-text">
            Story             
          </div>
        </div>
        <div class="offer-content">
           
        
          <h3 class="lead">
           <%= link_to s.heading  %>
          </h3>
          <p>
           <%= link_to s.describtion.truncate(250)  %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
    
    </div>
    </div>