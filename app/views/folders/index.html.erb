<%- model_class = Folder -%>
<div class="page-header">
  <h1> My Life</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
    <% if @folders.empty? %>
        <div class="offer offer-info">
          <div class="shape">
            <div class="shape-text">
              Life               
            </div>
          </div>
        
          <div class="offer-content">
            <h3 class="lead">
              <%= link_to "Give a name to your life" , new_folder_path %>
            </h3>
            <p>
             
            </p>
          </div>
        </div>
       <% else %>
      <% @folders.each do |f| %>
      
        <div class="offer offer-info">
          <div class="shape">
            <div class="shape-text">
              Life               
            </div>
          </div>
        
          <div class="offer-content">
            <h3 class="lead">
              <%= link_to f.name, folder_path(f)  %>
            </h3>
            <p>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_folder_path(f), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                folder_path(f),:method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
            </p>
          </div>
        </div>
       
    </div>
     <% end %>
     <% end %>
  </div>
  <% @folders.each do |f| %>
  <%if f.phases.empty? %>
      <div class="row">
      <div class="col-md-4">
     
        <div class="offer offer-success">
          <div class="shape">
            <div class="shape-text">
              Phase              
            </div>
          </div>
        
          <div class="offer-content">
            <h3 class="lead">
              <%= link_to "Give a name to your phase" , folder_path(f) %>
            </h3>
            <p>
             
            </p>
          </div>
        </div>
    </div>
</div>
  <% else %>
   <% f.phases.each do |p| %>
  <div class="row">
    <div class="col-md-4">
     
        <div class="offer offer-success">
          <div class="shape">
            <div class="shape-text">
              Phase              
            </div>
          </div>
        
          <div class="offer-content">
            <h3 class="lead">
              <%= link_to p.name , phase_path(p) %>
            </h3>
            <p>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_phase_path(p), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                phase_path(p),:method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
            </p>
          </div>
        </div>
    </div>
   <div class="col-md-1">
     <h1>
       <span class="glyphicon glyphicon-search"></span>
     </h1>
   </div>
   <% if p.stories.empty? %>
   <div class="col-md-2">
     
        <div class="offer offer-warning">
          <div class="shape">
            <div class="shape-text">
              Story              
            </div>
          </div>
        
          <div class="offer-content">
            <h3 class="lead">
              <%= link_to "Write your story.." , phase_path(p) %>
            </h3>
            <p>
             
            </p>
          </div>
        </div>
    </div>
   <% else %>

    <% p.stories.each do |s| %>

    <div class="col-md-2">
     
        <div class="offer offer-warning">
          <div class="shape">
            <div class="shape-text">
              Story              
            </div>
          </div>
        
          <div class="offer-content">
            <h3 class="lead">
              <%= s.heading.truncate(6) %>
            </h3>
            <p>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_story_path(s), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                story_path(s),:method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
            </p>
          </div>
        </div>
    </div>
<% end %>
<% if p.stories.count < 9 %>
      <div class="col-md-2">
     
        <div class="offer offer-warning">
          <div class="shape">
            <div class="shape-text">
              Story             
            </div>
          </div>
        
          <div class="offer-content">
            <h3 class="lead">
               <%= link_to "Write another story.." , phase_path(p) %>
            </h3>
            <p>
             
            </p>
          </div>
        </div>
    </div>

 <% end %>
<% end %>

  </div>
 <% end %>
 <% if f.phases.count < 10 %>
<div class="row">
      <div class="col-md-4">
     
        <div class="offer offer-success">
          <div class="shape">
            <div class="shape-text">
              Phase              
            </div>
          </div>
        
          <div class="offer-content">
            <h3 class="lead">
              <%= link_to "Give a name to your phase" , folder_path(f) %>
            </h3>
            <p>
             
            </p>
          </div>
        </div>
    </div>
</div>

 <% end %>

  <% end %>

<% end %>

</div>

